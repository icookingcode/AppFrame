<?xml version="1.0" encoding="utf-8"?>
<com.scwang.smartrefresh.layout.SmartRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/refreshLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.hnhy.epapp.mvp.ui.widget.coffee.CoffeeHeader
        android:layout_width="match_parent"
        android:layout_height="100dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_header_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minHeight="@dimen/dimen_40dp"
            android:text="标题一" />

        <TextView
            android:id="@+id/tv_header_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minHeight="@dimen/dimen_40dp"
            android:text="标题二" />

        <TextView
            android:id="@+id/tv_header_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minHeight="@dimen/dimen_40dp"
            android:text="标题三" />

        <TextView
            android:id="@+id/tv_header_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minHeight="@dimen/dimen_40dp"
            android:text="标题四" />

        <TextView
            android:id="@+id/tv_header_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minHeight="@dimen/dimen_40dp"
            android:text="标题五" />

    </LinearLayout>
</com.scwang.smartrefresh.layout.SmartRefreshLayout>