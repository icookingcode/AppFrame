<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="title" format="reference|string"/>
    <attr name="titleTextColor" format="color"/>
    <declare-styleable name="ViewNoData">
        <attr name="hintIcon" format="reference" />
        <attr name="hint1" format="reference|string" />
        <attr name="hint2" format="reference|string" />
        <attr name="mulLineHint" format="boolean" />
        <attr name="topIconMargin" format="dimension" />
    </declare-styleable>

    <declare-styleable name="ToolBar">
        <attr name="leftType">
            <enum name="none" value="0"/>
            <enum name="finish" value="1"/>
            <enum name="function" value="2"/>
        </attr>
        <attr name="leftIcon" format="reference"/>
        <attr name="title" />
        <attr name="titleTextColor"/>
        <attr name="titleTextSize" format="dimension"/>
        <attr name="rightType">
            <enum name="none" value = "0"/>
            <enum name="icon" value = "1"/>
            <enum name="string" value = "2"/>
        </attr>
        <attr name="rightIcon" format="reference"/>
        <attr name="rightString" format="reference|string"/>
    </declare-styleable>

    <declare-styleable name="MyPieChartView">
        <attr name="bgColor" format="color" />
        <attr name="lineWith" format="dimension" />
        <!--大圆半径-->
        <attr name="radius" format="dimension" />
        <!--内部填充圆半径-->
        <attr name="radiusInner" format="dimension" />
        <!--指示圆点半径-->
        <attr name="radiusCenterPoint" format="dimension" />
        <!--内圆填充颜色-->
        <attr name="innerCircleColor" format="dimension" />
        <attr name="textSize4Describe" format="dimension" />
        <attr name="textSize4Score" format="dimension" />
        <attr name="textColor4Describe" format="color" />
        <attr name="textColor4Score" format="color" />
        <attr name="isDrawCenterText" format="boolean" />
    </declare-styleable>

    <!--CircleView-->
    <declare-styleable name="CircleView">
        <attr name="circle_radius" format="dimension" />
        <attr name="outer_circle_color" format="reference|color" />
        <attr name="middle_circle_color" format="reference|color" />
        <attr name="inner_circle_color" format="reference|color" />
    </declare-styleable>

    <declare-styleable name="CoffeeHeader">
        <attr name="coffeeColor" format="color" />
        <attr name="cupBodyColor" format="color" />
        <attr name="cupBottomColor" format="color" />
        <attr name="handColor" format="color" />
        <attr name="stickColor" format="color" />
        <attr name="cupRadius" format="dimension" />
    </declare-styleable>
</resources>